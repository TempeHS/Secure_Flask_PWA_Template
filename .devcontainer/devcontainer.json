{
  "name": "Secure Flask PWA DevContainer",
  "image": "mcr.microsoft.com/devcontainers/python:3.11-bookworm", // Faster, smaller, and more relevant than "universal"
  "features": {
    "ghcr.io/devcontainers/features/node:1": { "version": "18" }, // For JS tooling/PWA, if needed
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "hostRequirements": {
    "cpus": 2,
    "memory": "4gb"
  },
  "postCreateCommand": "pip install -r requirements.txt && npm install --omit=dev || true", // Single command, caching, ignore npm if not present
  "portsAttributes": {
    "5000": {
      "label": "Flask Application",
      "onAutoForward": "openBrowser"
    },
    "3000": {
      "label": "API",
      "onAutoForward": "silent"
    }
  },
  "customizations": {
    "codespaces": {
      "openFiles": ["README.md"]
    },
    "vscode": {
      "settings": {
        "files.autoSave": "onFocusChange",
        "editor.formatOnPaste": true,
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "[python]": {
          "editor.defaultFormatter": "ms-python.black-formatter"
        },
        "editor.fontSize": 18,
        "terminal.integrated.defaultProfile.windows": "Git Bash",
        "window.restoreWindows": "preserve",
        "workbench.editorAssociations": {
          "*.md": "vscode.markdown.preview.editor"
        },
        "workbench.colorTheme": "Default Dark+",
        "workbench.iconTheme": "vscode-icons",
        "github.copilot.enable": {
          "*": true,
          "python": false,
          "html": false,
          "css": false,
          "sql": false
        },
        "chat.agent.enabled": false
      },
      "extensions": [
        "ms-python.python",
        "ms-python.black-formatter",
        "ms-python.pylint",
        "ms-python.debugpy",
        "ms-python.vscode-pylance",
        "esbenp.prettier-vscode",
        "ecmel.vscode-html-css",
        "oderwat.indent-rainbow",
        "ritwickdey.LiveServer",
        "GitHub.codespaces",
        "mechatroner.rainbow-csv",
        "yy0931.vscode-sqlite3-editor",
        "bierner.markdown-preview-github-styles",
        "yahyabatulu.vscode-markdown-alert",
        "medo64.render-crlf"
      ]
    }
  },
  "forwardPorts": [5000, 3000],
  "remoteUser": "vscode",
  "shutdownAction": "stopContainer"
}
